# env.example
# 
# Variables de entorno de ejemplo para la aplicación DCF Valuation API
# Copia este archivo a .env y ajusta los valores según tu entorno

# Configuración de la aplicación
APP_NAME=dcf_valuation_api
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# Configuración de la API
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Configuración de la base de datos
DATABASE_URL=postgresql://user:password@localhost:5432/dcf_db

# Configuración de Redis
REDIS_URL=redis://localhost:6379/0

# Configuración de Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Configuración de APIs externas
FMP_API_KEY=your_financial_modeling_prep_api_key
IEX_API_KEY=your_iex_api_key

# Configuración de seguridad
SECRET_KEY=your_secret_key_here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Configuración de almacenamiento
S3_BUCKET_NAME=dcf-reports
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1 